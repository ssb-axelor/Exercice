<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">

	<grid name="produit-grid" title="Liste des produits" model="com.axelor.gestion.db.Produit">
		<field name="productName" title="Nom du produit"/>
		<field name="categorie" title="Catégorie du produit"/>
		<field name="price" title="Prix unitaire"/>
		<field name="compte" title="Compte comptable"/>
	</grid>
	
	<form name="produit-form" title="Produit" model="com.axelor.gestion.db.Produit">
		<panel >
			<field name="productName" title="Nom du produit"/>
			<field name="categorie" title="Catégorie du produit"/>
			<field name="price" title= "Prix unitaire"/>
			<field name="compte" title="Compte comptable"/>
		</panel>
		
		<panel sidebar="true">
			<field name="createdOn"/>
			<field name="createdBy"/>
			<field name="updatedOn"/>
			<field name="updatedBy"/>
		</panel>
	</form>

</object-views>
