<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">

	<grid name="client-grid" title="Client List" model="com.axelor.gestion.db.Client">
		<field name="firstName" title= "Prénom"/>
		<field name="lastName" title= "Nom"/>
		<field name="phone" title="Numéro de téléphone"/>
	</grid>

	<form name="client-form" title="Client" model="com.axelor.gestion.db.Client">
		<panel title="Informations">
		<field name="firstName" title= "Prénom"/>
		<field name="lastName" title= "Nom"/> 
		<field name="notes" title= "A propos"/>
		<field name="dateOfBirth" title= "Date de naissance"/>
	
		</panel>
		<panel title="Coordonnées">
			<field name="phone" title= "Numéro de téléphone"/>
			<field name="email" title= "Adresse mail"/>
			<!-- <field name="message" showTitle="false" x-span="12"/> -->
		</panel>
		<panel sidebar="true">
			<field name="createdOn"/>
			<field name="createdBy"/>
			<field name="updatedOn"/>
			<field name="updatedBy"/>
		</panel>
	</form>

</object-views>
